{
  "presets": [
    "flow",
    // ES2015转码规则
    "es2015",
    [
      "env", 
      {
        // Enable "loose" transformations for any plugins in this preset that allow them.
        // https://github.com/babel/babel/issues/2470
        "loose": false,
        // Target latest node via node: true or node: "current"
        "targets": {
          "node": 4
        }
      }
    ],
    // ES7不同阶段语法提案的转码规则（共有4个阶段），选装一个
    "stage-2"
  ],
  "plugins": [
    // 回到 babel5 时候的表现
    "add-module-exports"
  ]
}